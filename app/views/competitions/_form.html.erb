<%= form_for @competition,  remote: true, :html => {:multipart => true, :format => :js} do |f|   %>
  <% if @competition.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@competition.errors.count, "error") %> prohibited
        this article f rom being saved:
      </h2>
      <ul>
        <% @competition.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

   <p>
    <%= f.label :start_date %><br>
    <%= f.date_field :start_date %>
  </p>

  <p>
    <%= f.label :end_date %><br>
    <%= f.date_field :end_date %>
  </p>
  <% if opt=='edit' %>
    <p>
      <%= f.label :uri %><br>
      <%= f.text_field :uri %>
    </p>
  <% end %>
  <p>
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.label :remote_image_url, "or image URL" %><br />
    <%= f.text_field :remote_image_url %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>